<Window x:Class="SolarSystemApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Systeme_solaire"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,10,10,10">

        <!-- Définition des lignes et colonnes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Barre de recherche -->
            <RowDefinition Height="*"/>
            <!-- Liste des données -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <!-- Liste -->
            <ColumnDefinition Width="49*"/>
            <!-- Détails -->
        </Grid.ColumnDefinitions>

        <MediaElement x:Name="MyMediaElement"
                      Source="son/son.mp3"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      Volume="0.9" />

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Content="Play" Width="75" Click="Play_Click" />
            <Button Content="Pause" Width="75" Click="Pause_Click" />
            <Button Content="Stop" Width="75" Click="Stop_Click" />
        </StackPanel>

        <!-- Barre de recherche -->
        <TextBox x:Name="SearchBox" 
                 Grid.Row="0" Grid.Column="0"
                 Margin="0,0,0,10"
                 Width="200" 
                 HorizontalAlignment="Left"

                 TextChanged="SearchBox_TextChanged"/>

        <!-- DataGrid pour afficher les corps célestes -->
        <DataGrid x:Name="BodiesListView"
                  Grid.Row="1" Grid.Column="0"
                  AutoGenerateColumns="False"
                  SelectionChanged="BodiesListView_SelectionChanged"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  SelectionMode="Single" Margin="0,0,7,0">

            <!-- Colonnes -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding name}" Width="*"/>
                <DataGridTextColumn Header="Nom en anglais" Binding="{Binding englishName}" Width="*"/>
                <DataGridTextColumn Header="Type de corps" Binding="{Binding bodyType}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- StackPanel pour les détails de l'objet sélectionné -->
        <StackPanel x:Name="DetailsPanel"
                    Grid.Row="1" Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalAlignment="Top" Height="213">
            <TextBlock Text="Détails" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="White"/>
            <TextBlock x:Name="NameText" Text="Nom :" Margin="0,5" Foreground="White"/>
            <TextBlock x:Name="EnglishNameText" Text="Nom en anglais :" Margin="0,5" Foreground="White"/>
            <TextBlock x:Name="BodyTypeText" Text="Type :" Margin="0,5" Foreground="White"/>
            <TextBlock x:Name="GravityText" Text="Gravité :" Margin="0,5" Foreground="White"/>
            <TextBlock x:Name="RadiusText" Text="Rayon moyen :" Margin="0,5" Foreground="White"/>
            <TextBlock x:Name="DiscoveredByText" Text="Découverte par :" Margin="0,5" Foreground="White"/>
            <TextBlock x:Name="DiscoveryDateText" Text="Date de découverte :" Margin="0,5" Foreground="White"/>
        </StackPanel>

        <!-- Bouton pour actualiser la liste -->
        <Button x:Name="RefreshButton"
                Grid.Row="1" Grid.Column="1"
                HorizontalAlignment="Left"
                Width="120" Content="Actualiser la liste"
                Click="RefreshButton_Click" Margin="360,10,0,327"/>
        <Grid.Background>
            <ImageBrush ImageSource="Background/back.jpg" />
        </Grid.Background>
        
    </Grid>
</Window>